@model NoStressWedding.Areas.DBManagement.Models.UserItem

@{
    ViewBag.Title = "Delete";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<fieldset>
    <legend>UserItem</legend>

    <div class="display-label">ItemValue</div>
    <div class="display-field">@Html.DisplayTextFor(_ => Model.ItemValue).ToString()</div>

    <div class="display-label">UserRoles</div>
    <div class="display-field">@(Model.UserRoles == null ? "None" : Model.UserRoles.Count.ToString())</div>

    <div class="display-label">ItemOrder</div>
    <div class="display-field">@Model.ItemOrder</div>

    <div class="display-label">UserItems</div>
    <div class="display-field">@(Model.UserItems == null ? "None" : Model.UserItems.Count.ToString())</div>
</fieldset>
@using (Html.BeginForm()) {
    <p>
        <input type="submit" value="Delete" /> |
        @Html.ActionLink("Back to List", "Index")
    </p>
}


