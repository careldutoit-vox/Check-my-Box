@model IEnumerable<NoStressWedding.Areas.DBManagement.Models.UserItem>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table>
    <tr>
        <th></th>
        <th>
            ItemValue
        </th>
        <th>
            UserRoles
        </th>
        <th>
            ItemOrder
        </th>
        <th>
            UserItems
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.UserItemId }) |
            @Html.ActionLink("Details", "Details", new { id=item.UserItemId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.UserItemId })
        </td>
        <td>
			@Html.DisplayTextFor(_ => item.ItemValue).ToString()
        </td>
        <td>
			@(item.UserRoles == null ? "None" : item.UserRoles.Count.ToString())
        </td>
        <td>
			@item.ItemOrder
        </td>
        <td>
			@(item.UserItems == null ? "None" : item.UserItems.Count.ToString())
        </td>
    </tr>
}

</table>


