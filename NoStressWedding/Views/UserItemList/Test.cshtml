@model NoStressWedding.Models.UserItemList

@{
    ViewBag.Title = "Test";
	}

<h2>My CheckList</h2>
    @using (Html.BeginForm()) {
        @Html.ValidationSummary(true)
        
        <fieldset>
            <legend>Wedding CheckList</legend>
            
            <div class="editor-label">
               Owner
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.UserOwner.Name)
                @Html.ValidationMessageFor(model => model.UserItemListId)
            </div>
              @foreach (var item in Model.UserItems)
              {
                    <tr>
                        <td>
                            @if (item.ItemValue is NoStressWedding.Models.ItemTextValue) {
                                <div>ItemTextValue</div>
                            } else if (item.ItemValue is NoStressWedding.Models.ItemSearchableValue){
                                <div>ItemSearchableValue</div>
                            } else if (item.ItemValue is NoStressWedding.Models.ItemSelectableValue){
                               <div>ItemSelectableValue</div>
                            }
                        </td>
                         <td>
                            @Html.ActionLink("Edit", "Edit", new { /* id=item.PrimaryKey */ }) |
                            @Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }) |
                            @Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ })
                        </td>
                    </tr>
              }
            

            <div class="editor-label">
                @Html.LabelFor(model => model.UserItems)
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.UserItemListId)
                @Html.ValidationMessageFor(model => model.UserItemListId)
            </div>
            <p>
                <input type="submit" value="Save" />
            </p>
        </fieldset>

    }

    <div>
        @Html.ActionLink("Back to List", "Index")
    </div>



