@model Check_my_Box.Areas.DBManagement.Models.UserItem

@* This partial view defines form fields that will appear when creating and editing entities *@

<div class="editor-label">
    @Html.LabelFor(model => model.ItemOrder)
</div>
<div class="editor-field">
    @Html.EditorFor(model => model.ItemOrder)
    @Html.ValidationMessageFor(model => model.ItemOrder)
</div>

<div class="editor-label">
    ItemValue
</div>
<div class="editor-field">
    @Html.DropDownListFor(model => model.ItemValueId, ((IEnumerable<Check_my_Box.Areas.DBManagement.Models.ItemValue>)ViewBag.PossibleItemValues).Select(option => new SelectListItem {
        Text = Html.DisplayTextFor(_ => option).ToString(), 
        Value = option.ItemValueId.ToString(),
        Selected = (Model != null) && (option.ItemValueId == Model.ItemValueId)
    }), "Choose...")
    @Html.ValidationMessageFor(model => model.ItemValueId)
</div>
