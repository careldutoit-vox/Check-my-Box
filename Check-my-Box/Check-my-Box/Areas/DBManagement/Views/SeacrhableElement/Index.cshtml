@model IEnumerable<Check_my_Box.Areas.DBManagement.Models.SearchableElement>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table>
    <tr>
        <th></th>
        <th>
            Categorys
        </th>
        <th>
            Name
        </th>
        <th>
            Description
        </th>
        <th>
            CategoryAttributeValues
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.SearchableElementId }) |
            @Html.ActionLink("Details", "Details", new { id=item.SearchableElementId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.SearchableElementId })
        </td>
        <td>
			@(item.Categorys == null ? "None" : item.Categorys.Count.ToString())
        </td>
        <td>
			@item.Name
        </td>
        <td>
			@item.Description
        </td>
        <td>
			@(item.CategoryAttributeValues == null ? "None" : item.CategoryAttributeValues.Count.ToString())
        </td>
    </tr>
}

</table>


