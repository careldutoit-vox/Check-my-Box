@model Check_my_Box.Areas.DBManagement.Models.ItemTextValue

@* This partial view defines form fields that will appear when creating and editing entities *@

<div class="editor-label">
    @Html.LabelFor(model => model.PlaceHolder)
</div>
<div class="editor-field">
    @Html.EditorFor(model => model.PlaceHolder)
    @Html.ValidationMessageFor(model => model.PlaceHolder)
</div>

<div class="editor-label">
    @Html.LabelFor(model => model.TextValue)
</div>
<div class="editor-field">
    @Html.EditorFor(model => model.TextValue)
    @Html.ValidationMessageFor(model => model.TextValue)
</div>

<div class="editor-label">
    ItemText
</div>
<div class="editor-field">
    @Html.DropDownListFor(model => model.ItemTextId, ((IEnumerable<Check_my_Box.Areas.DBManagement.Models.ItemText>)ViewBag.PossibleItemTexts).Select(option => new SelectListItem {
        Text = Html.DisplayTextFor(_ => option).ToString(), 
        Value = option.Id.ToString(),
        Selected = (Model != null) && (option.Id == Model.ItemTextId)
    }), "Choose...")
    @Html.ValidationMessageFor(model => model.ItemTextId)
</div>
